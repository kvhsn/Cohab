{
  "name": "cohab-monorepo",
  "version": "1.0.0",
  "description": "Cohab - Roommate management platform",
  "author": "Kevin Hassan",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "nx run-many --target=start",
    "build": "nx run-many --target=build",
    "lint": "nx run-many --target=lint",
    "format": "nx run-many --target=format",
    "test": "nx run-many --target=test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@expo/cli": "~54.0.16",
    "@nx/expo": "22.5.0",
    "@nx/js": "22.5.0",
    "@nx/node": "22.5.0",
    "@nx/vite": "22.5.0",
    "@nx/vitest": "22.5.0",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.5",
    "@swc/helpers": "~0.5.18",
    "@types/node": "20.19.9",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.25.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "metro-config": "~0.83.0",
    "metro-resolver": "~0.83.0",
    "nx": "latest",
    "prettier": "^3.8.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.0",
    "vitest": "^4.0.8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "expo-network"
      ]
    },
    "overrides": {
      "hermes-compiler": "250829098.0.4",
      "lightningcss": "1.30.1"
    }
  },
  "dependencies": {
    "expo": "~54.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.5"
  }
