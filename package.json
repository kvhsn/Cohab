{
  "name": "colocapp-monorepo",
  "version": "1.0.0",
  "description": "Coloc App - Roommate management platform",
  "author": "Kevin Hassan",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "nx run-many --target=start",
    "build": "nx run-many --target=build",
    "lint": "nx run-many --target=lint",
    "format": "nx run-many --target=format",
    "test": "nx run-many --target=test",
    "prepare": "husky"
  },
  "devDependencies": {
    "nx": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "eslint": "^9.25.0",
    "typescript": "~5.9.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "expo-network"
      ]
    },
    "overrides": {
      "hermes-compiler": "250829098.0.4"
    }
  }
}
